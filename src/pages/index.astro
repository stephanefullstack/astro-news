---
import BaseLayout from "@/layouts/base.astro";
import { getEntry } from "astro:content";
import Headlines from "@/pages/_home/headlines.astro";
import LatestNews from "@/pages/_home/latestNews.astro";
import Authors from "@/pages/_home/authors.astro";

const entry = await getEntry("views", "home");

if (!entry) {
  return Astro.redirect("/404");
}
---

<BaseLayout entry={entry}>
  <Headlines />
  <script
    async
    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5209733649309239"
    crossorigin="anonymous"></script>
  <!-- voiture1display -->
  <ins
    class="adsbygoogle"
    style="display: flex; justify-content: center; align-items: center;"
    data-ad-client="ca-pub-5209733649309239"
    data-ad-slot="5482033526"
    data-ad-format="auto"
    data-full-width-responsive="true"></ins>
  <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
  <LatestNews />
  <script
    async
    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5209733649309239"
    crossorigin="anonymous"></script>
  <!-- voiture1display -->
  <ins
    class="adsbygoogle"
    style="display: flex; justify-content: center; align-items: center;"
    data-ad-client="ca-pub-5209733649309239"
    data-ad-slot="5482033526"
    data-ad-format="auto"
    data-full-width-responsive="true"></ins>
  <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
  <Authors />
  <script
    async
    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5209733649309239"
    crossorigin="anonymous"></script>
  <!-- voiture1display -->
  <ins
    class="adsbygoogle"
    style="display: flex; justify-content: center; align-items: center;"
    data-ad-client="ca-pub-5209733649309239"
    data-ad-slot="5482033526"
    data-ad-format="auto"
    data-full-width-responsive="true"></ins>
  <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
</BaseLayout>
